{% extends 'admin/base.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Object</th>
                <th>Sender</th>
                <th>Phone</th>
                <th>Message</th>
                <th>Sending_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.object }}</td>
                <td>{{ mail.sender }}</td>
                <td>{{ mail.phone }}</td>
                <td>{{ mail.message }}</td>
                <td>{{ mail.sendingDate ? mail.sendingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_mail_show', {'id': mail.id}) }}">show</a>
                    <a href="{{ path('admin_mail_edit', {'id': mail.id}) }}">edit</a>
                    {{ include('admin/mail/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_mail_new') }}">Create new</a>
{% endblock %}
