{% extends 'admin/base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ picture.file }}</td>
            </tr>
            <tr>
                <th>Publication_date</th>
                <td>{{ picture.publicationDate ? picture.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ picture.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_picture_index') }}">back to list</a>

    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('admin/picture/_delete_form.html.twig') }}
