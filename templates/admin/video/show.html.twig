{% extends 'admin/base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ video.link }}</td>
            </tr>
            <tr>
                <th>Publication_date</th>
                <td>{{ video.publicationDate ? video.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ video.type }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ video.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_video_index') }}">back to list</a>

    <a href="{{ path('admin_video_edit', {'id': video.id}) }}">edit</a>

    {{ include('admin/video/_delete_form.html.twig') }}
{% endblock %}
